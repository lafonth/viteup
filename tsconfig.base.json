{
  "compilerOptions": {
    "pretty": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDeclarationOnly": true,

    "composite": true,
    "noEmitOnError": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"]
  }
}
