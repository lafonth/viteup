{
	"compilerOptions": {
		"outDir": "./dist",

		"pretty": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"sourceMap": true,
		"inlineSources": true,

		"composite": true,
		"noEmitOnError": true,

		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true,

		"types": ["node"]
	}
}
